generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id        String     @id @default(cuid())
  userId    String // Clerk user ID
  text      String
  completed Boolean    @default(false)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  files     TodoFile[]

  @@index([userId])
  @@map("todos")
}

model TodoFile {
  id        String   @id @default(cuid())
  todoId    String
  name      String
  type      String
  size      Int
  url       String
  createdAt DateTime @default(now())

  todo Todo @relation(fields: [todoId], references: [id], onDelete: Cascade)

  @@index([todoId])
  @@map("todo_files")
}

model UserProfile {
  id                 String   @id @default(cuid())
  userId             String   @unique // Clerk user ID
  whoIAm             String?  @db.Text
  whatIWantToAchieve String?  @db.Text
  whatIWantInLife    String?  @db.Text
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("user_profiles")
}

model ContextFile {
  id            String   @id @default(cuid())
  userId        String
  name          String
  type          String // pdf, docx, xlsx, image
  size          Int
  storageUrl    String // S3/Cloudflare R2 URL
  extractedText String?  @db.Text // Parsed content
  metadata      Json? // Additional metadata (page count, sheets, etc)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([userId])
  @@map("context_files")
}

model AIContext {
  id               String    @id @default(cuid())
  userId           String    @unique
  lastProcessedAt  DateTime?
  embeddingVersion String? // Track embedding model version
  contextSummary   String?   @db.Text // AI-generated summary of all context

  @@map("ai_contexts")
}
